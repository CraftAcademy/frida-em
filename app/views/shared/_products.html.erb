<div class="content_middle_bottom" style="margin-top: 50px;">
  <div class="header-left" id="home">
    <section>
      <ul class="lb-album">
        <!-- card list item -->
        <% for product in products.includes(:default_image, :product_categories) %>
          <li>
            <a href="#image-1">
              <%= render 'shared/image', product: product %>
              <span><%= product.name %></span><br/>
            </a>

            <div class="lb-overlay" id="image-1">
              <a href="#page" class="lb-close">x Close</a>
              <!--img src="<%#= product.default_image.path %>" class="img-responsive" alt="image01"/-->
              <%= render 'shared/image', product: product %>

              <div>
                <h3><%= link_to product.name, product_path(product.product_category.permalink, product.permalink) %></h3>

                <p><%= truncate product.short_description, length: 90 %></p>
                <%= link_to 'Info', product_path(product.product_category.permalink, product.permalink), class: 'btn' %>
                <% if product.orderable? %>
                  <%= link_to 'LÃ¤gg till', buy_product_path(product.product_category.permalink, product.permalink), class: 'btn', method: :post %>
                <% end %>
                </p>
                <% unless product.has_variants? %>
                  <p>
                    <%= "#{number_to_currency product.price_including_tax, format: '%n %u' }" %>
                  </p>
                <% end %>

              </div>
            </div>
          </li>
        <% end %>
        <div class="clearfix"></div>
      </ul>
    </section>
  </div>
</div>
