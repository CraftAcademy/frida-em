<div class="content_middle_bottom" style="margin-top: 50px;">
  <div class="header-left" id="home">
    <section>
      <ul class="lb-album">
        <!-- card list item -->
        <% for product in products.includes(:default_image, :product_categories) %>
          <li>
            <a href="#image-<%= product.default_image.id %>">
              <%= render 'shared/image', product: product %>
              <span><%= product.name %></span><br/>
            </a>

            <div class="lb-overlay" id="image-<%= product.default_image.id %>">
              <a href="#page" class="lb-close">Close</a>
              <%= link_to 'Info', product_path(product.product_category.permalink, product.permalink), class: 'lb-close btn btn-primary' %>
              <% if product.orderable? %>
                <%= link_to 'LÃ¤gg till', buy_product_path(product.product_category.permalink, product.permalink), class: 'lb-close btn btn-primary', method: :post %>
              <% end %>
              <img src="<%= product.default_image.path %>" class="img-responsive" alt="image<%= product.default_image.id %>"/>

              <div>
                <h3><%= link_to product.name, product_path(product.product_category.permalink, product.permalink) %></h3>

                <p><%= truncate product.short_description, length: 90 %></p>

                </p>
                <% unless product.has_variants? %>
                  <p>
                    <%= "#{number_to_currency product.price_including_tax, format: '%n %u' }" %>
                  </p>
                <% end %>
              </div>
              <div>

              </div>
            </div>
          </li>
        <% end %>
        <div class="clearfix"></div>
      </ul>
    </section>
  </div>
</div>
