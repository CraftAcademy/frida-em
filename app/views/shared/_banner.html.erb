<div class="banner" id="slider">
  <div class="container">
    <div class="header_top">
      <div class="header_top_left">
        <div class="box_11">
          <%= render 'layouts/shared/basket' %>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="clearfix"></div>
    </div>
    <div class="header_bottom">
      <div class="logo">
        <%= image_tag('by_frida_em_logo.jpeg') %>
      </div>
      <div class="menu">
        <ul class="megamenu skyblue">
          <li>
            <%= link_to 'Hem', root_path, class: 'color2' %>
          </li>
          <li>
            <%= link_to 'Om oss', page_path(:why), class: 'color2' %>
          </li>
          <li>
            <%= link_to 'Produkter', '#', class: 'color2' %>
            <div class="megapanel">
              <div class="row">
                <div class="col2">
                  <div class="h_nav">
                    <ul>
                      <% for category in procuct_categories %>
                        <li>
                          <%= link_to category.name.upcase, products_path(category.permalink), class: 'color2' %>
                        </li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </li>
          <li>
            <%= link_to 'Frågor & Svar', page_path(:faqs), class: 'color2' %>
          </li>
          <li>
            <%= link_to_unless_current 'Kontakta oss', page_path(:contact), class: 'color2' %>
          </li>
        </ul>


      </div>
      <div class="clearfix"></div>
      <div class="logo">
        <h1><span class="m_1">A</span>n inner tube from <span class="m_1">M</span>almö lost its function</h1>
        <h2>by Frida <span class="m_1">EM</span> gave it a new purpose</h2>
        <h1>to <span class="m_1">EM</span>brace and <span class="m_1">EM</span>power you.</h1>
      </div>

    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    $("#slider").vegas({
      transition: 'fade',
      overlay: '<%= image_path 'overlays/08.png' %>',
      transitionDuration: 2000,
      slides: [
        {src: "<%= image_path 'slider/bfem_1.jpg' %>"},
        {src: "<%= image_path 'slider/bfem_2.jpg' %>"},
        {src: "<%= image_path 'slider/bfem_3.jpg' %>"},
        {src: "<%= image_path 'slider/bfem_4.jpg' %>"},
        {src: "<%= image_path 'slider/bfem_5.jpg' %>"},
        {src: "<%= image_path 'slider/bfem_6.jpg' %>"},
        {src: "<%= image_path 'slider/bfem_7.jpg' %>"},
        {src: "<%= image_path 'slider/bfem_8.jpg' %>"},
        {src: "<%= image_path 'slider/bfem_9.jpg' %>"}
      ]
    });
  });

</script>
